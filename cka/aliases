alias k='kubectl'; \
alias kg='kubectl get'; \
alias kgy='kubectl get -o yaml'; \
alias kd='kubectl describe'; \
alias kcy='kubectl create --dry-run=client -o yaml'; \
alias kr='kubectl run'; \
alias kry='kubectl run --dry-run=client -o yaml'; \
alias kx='kubectl delete'; \
alias kxx='kubectl delete --grace-period=0 --force'; \
alias ka='kubectl apply';

kubectl get nodes -A -o=jsonpath='{.items[*].status.nodeInfo.osImage}'